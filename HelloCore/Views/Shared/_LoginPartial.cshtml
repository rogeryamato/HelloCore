

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
@using System.Security.Claims;

@if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
{
<form asp-controller="Login" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
    <ul class="nav navbar-nav navbar-right">
        <li>
            <span class="navbar-right navbar-nav">@HttpContextAccessor.HttpContext.User.Claims.First(s => s.Type == ClaimTypes.Name).Value</span>
        </li>
        <li>
            <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
        </li>
    </ul>
</form>
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li><a asp-area="" asp-controller="Login" asp-action="Index">Log in</a></li>
</ul>
}